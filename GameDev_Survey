  <title>Happy MotMot Day ❤️</title>
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(180deg, #ffdde1, #ee9ca7);
      overflow: hidden;
    }

    .container {
      text-align: center;
      padding: 1.5rem;
      max-width: 900px;
      width: 100%;
    }

    h1 {
      color: #b30059;
      font-size: clamp(1.8rem, 4vw, 3rem);
      margin-bottom: 0.5rem;
    }

    .message {
      color: #800040;
      font-size: clamp(1.2rem, 3vw, 1.8rem);
      margin-bottom: 2rem;
      font-weight: 600;
    }

    /* Sunflower field */
    .field {
      position: relative;
      width: 100%;
      height: 40vh;
      max-height: 320px;
      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

    .sunflower {
      position: relative;
      width: 20px;
    }

    .stem {
      width: 6px;
      height: 0;
      margin: 0 auto;
      background: #2e8b57;
      border-radius: 3px;
      animation: growStem 4s ease-out forwards;
    }

    .head {
      position: absolute;
      top: -90px;
      left: 50%;
      transform: translateX(-50%) scale(0);
      width: 100px;
      height: 100px;
      animation: bloom 2s ease-out forwards;
      animation-delay: 3.5s;
    }

    .petals {
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      background: radial-gradient(circle, #8b4513 35%, transparent 36%),
                  repeating-conic-gradient(#ffcc33 0deg 15deg, #ffb703 15deg 30deg);
    }

    .center {
      position: absolute;
      top: 32px;
      left: 32px;
      width: 36px;
      height: 36px;
      background: #5a2d0c;
      border-radius: 50%;
    }

    @keyframes growStem {
      from { height: 0; }
      to { height: 220px; }
    }

    @keyframes bloom {
      from { transform: translateX(-50%) scale(0); }
      to { transform: translateX(-50%) scale(1); }
    }

    /* Floating hearts */
    .heart {
      position: absolute;
      bottom: -20px;
      color: rgba(255, 0, 100, 0.4);
      font-size: 20px;
      animation: floatUp 6s linear infinite;
    }

    @keyframes floatUp {
      from { transform: translateY(0); opacity: 1; }
      to { transform: translateY(-110vh); opacity: 0; }
    }

    @media (max-width: 600px) {
      .field { height: 35vh; }
      .head { width: 80px; height: 80px; top: -75px; }
      .center { width: 28px; height: 28px; top: 26px; left: 26px; }
    }
