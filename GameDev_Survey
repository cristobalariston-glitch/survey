<body>
  <div class="container">
    <h1>Happy MotMot Day ❤️</h1>
    <div class="message">
      Happy Monthsary and Happy Valentines Day asawa ko<br />
      I Love You So Much &lt;3
    </div>

    <div class="field" id="field"></div>
    </div>
  </div>

  <script>
    // Create floating hearts
    function createHeart() {
      const heart = document.createElement('div');
      heart.classList.add('heart');
      heart.innerHTML = '❤';
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = 4 + Math.random() * 4 + 's';
      heart.style.fontSize = 14 + Math.random() * 20 + 'px';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 7000);
    }
    setInterval(createHeart, 500);

    // Create lots of growing sunflowers
    const field = document.getElementById('field');
    const sunflowerCount = 12;

    for (let i = 0; i < sunflowerCount; i++) {
      const sunflower = document.createElement('div');
      sunflower.className = 'sunflower';
      sunflower.style.margin = '0 10px';
      sunflower.style.transform = `scale(${0.7 + Math.random() * 0.5})`;

      const stem = document.createElement('div');
      stem.className = 'stem';
      stem.style.animationDelay = `${Math.random()}s`;

      const head = document.createElement('div');
      head.className = 'head';
      head.style.animationDelay = `${3 + Math.random()}s`;

      const petals = document.createElement('div');
      petals.className = 'petals';

      const center = document.createElement('div');
      center.className = 'center';

      head.appendChild(petals);
      head.appendChild(center);
      sunflower.appendChild(stem);
      sunflower.appendChild(head);
      field.appendChild(sunflower);
    }
  </script>
</body>
